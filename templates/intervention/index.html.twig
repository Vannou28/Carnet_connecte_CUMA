{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
    <div Class="container">
        <h1>Intervention index</h1>
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Mat√©riel</th>
                    <th>Surface</th>
                    <th>Tonnage</th>
                    <th>Commentaire</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for intervention in interventions %}
                    <tr>
                        <td>{{ intervention.dateIntervention ? intervention.dateIntervention|date('Y-m-d') : '' }}</td>
                        <td>{{ intervention.material.name }}</td>
                        <td>{{ intervention.aera }}</td>
                        <td>{{ intervention.weight }}</td>
                        <td>{{ intervention.comment }}</td>
                        <td>
                            <a href="{{ path('intervention_edit', {'id': intervention.id}) }}" class="text-light">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('intervention_new') }}" class="btn btn-light m-3">Nouvelle intervention</a>
    </div>
{% endblock %}
