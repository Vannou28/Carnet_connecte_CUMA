{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section class="mt-3 mb-5">
        <div class="d-flex flex-row justify-content-between align-items-center">
            {% if app.user %}
                <h3 class="ms-4">Bonjour {{ app.user.userdetails.firstname }}</h3>
                <div class="d-flex flex-column me-4">
                    <a href="{{ path('user_details_edit', {'id': app.user.userdetails.id}) }}" class="btn btn-light d-flex align-items-center" ><span class="iconify me-4" data-icon="bx:bxs-user-detail" data-inline="false"></span>Utilisateur</a>
                    <a href="{{ path('app_logout') }}" class="text-light" > Se déconnecter</a>
                </div>
            {% else %}
                <a href="{{ path('app_login') }}" class="text-light"> Se connecter</a>
            {% endif %}
        </div>
        <img class="w-100 mt-2" src="{{ asset('build/images/banniere_cuma.jpeg') }}" alt="image moissonneuse"/>
    </section>
    <section class="container">
        <a class="btn btn-light button-home fw-bold fw-bold mt-5 fs-5 w-100 d-flex align-items-center" href="{{ path('intervention_new') }}">
            <span class="iconify me-2" data-icon="codicon:notebook" data-inline="false"></span>
            Carnet d’enregistrement
        </a>

        <a class="btn btn-light button-home fw-bold fw-bold mt-5 fs-5 w-100 d-flex align-items-center" href="#">
            <span class="iconify me-2" data-icon="bx:bx-current-location" data-inline="false"></span>
            J’ai le matériel
        </a>

        <a class="btn btn-light button-home  fw-bold fw-bold mt-5 fs-5 w-100 d-flex align-items-center" href="#">
            <span class="iconify me-2" data-icon="fa-solid:search-location" data-inline="false"></span>
            Où se trouve le matériel
        </a>
    </section>
{% endblock %}
